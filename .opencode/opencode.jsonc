{
  "$schema": "https://opencode.ai/config.json",
  "permission": {
    "git commit*": "allow",
    "git diff*": "allow",
    "git status*": "allow",
    "grep *": "allow",
    "just lint*": "allow",
    "just typecheck*": "allow",
    "just test*": "allow",
    "just docker*": "allow"
  },
  "mcp": {
    "playwright": {
      "type": "local",
      "command": ["npx", "@playwright/mcp@latest"],
      "enabled": true
    },
    "context7": {
      "type": "local",
      "command": ["npx", "-y", "@upstash/context7-mcp@latest"],
      "enabled": true
    },
    "grep": {
      "type": "remote",
      "url": "https://mcp.grep.app",
      "enabled": true
    }
  }
}
